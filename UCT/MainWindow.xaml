<Window x:Class="UCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCT"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="657">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.333,-2.467"/>

        <Button x:Name="ReadX" Content="Read" Margin="0,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="-0.333,-2.467" Click="ReadX_Click" HorizontalAlignment="Right" Width="75"/>

        <Border BorderBrush="Silver" BorderThickness="1" Margin="0,45,10,10" HorizontalAlignment="Right" Width="181">
            <ScrollViewer x:Name="CourseScroller" VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black">
                <StackPanel x:Name="sp" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True" CanHorizontallyScroll="True"/>
            </ScrollViewer>
        </Border>
        <local:TimeTable Margin="10,35,196,10"/>




    </Grid>
</Window>
